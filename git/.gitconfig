[user]
	email = akrawchyk@optoro.com
	name = Andrew Krawchyk
[apply]
	whitespace = fix
[core]
	autocrlf = input
	whitespace = trailing-space,space-before-tab
	safecrlf = true
	trustctime = false
	excludesfile = ~/.gitignore_global
[push]
	default = current
[diff]
	renames = copies
	tool = vimdiff
[help]
	autocorrect = 1
[merge]
	log = true
	tool = fugitive
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\" -c \"wincmd =\"
	trustExitCode = false
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "ssh://git@github.com"]
	insteadOf = "https://github.com/"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[credential]
	helper = osxkeychain
[color "diff"]
	whitespace = red reverse
[color]
	ui = true
