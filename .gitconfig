[user]
	email = akrawchyk@gmail.com
	name = Andrew Krawchyk
[core]
	excludesfile = /home/andrew/.gitignore_global
	autocrlf = input
	whitespace = trailing-space,space-before-tab,indent-with-non-tab
	safecrlf = true
[push]
	default = simple
[diff]
	tool = vimdiff
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\" -c \"wincmd =\"
	trustExitCode = false
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
